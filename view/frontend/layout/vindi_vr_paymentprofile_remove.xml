<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Vindi_Payment::css/customer/account/payment_profile/remove.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Saved Cards</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Vindi\Payment\Block\PaymentProfile\Remove"
                   name="payment_profile.remove"
                   cacheable="false"
                   template="Vindi_Payment::customer/account/payment_profile/remove.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
